{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PDF Reader",
  "version": "0.1.0",
  "identifier": "com.yangguanlin.pdf-reader",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "library",
        "title": "PDF Reader",
        "url": "src/windows/library/index.html",
        "width": 1000,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "$HOME/Library/Mobile Documents/com~apple~CloudDocs/**",
            "$HOME/.pdf-reader/**"
          ]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
